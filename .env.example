# R-Talks Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# For production (Render/Railway), use DATABASE_URL instead of individual DB variables
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Alternative: Individual database variables (for local development)
DB_URL=postgresql://username:password@localhost:5432/rtalks_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rtalks_db

# Server Configuration
NODE_ENV=production
PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-frontend-app.vercel.app

# Frontend URL (for payment callbacks)
FRONTEND_URL=https://yourdomain.com
APP_URL=https://api.yourdomain.com

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_live_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure_admin_password_here

# Email Configuration (if you plan to add email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Application Settings
APP_NAME="R-Talks Platform Backend"